@model WebApplication1.Models.PostVM

@{
    ViewBag.Title = "Search";
}

<h2>Sign Up page</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="signup_form">
        <div class="form-group">
            @Html.LabelFor(model => model.NewsHeader, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsHeader, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsHeader, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <p><input type="submit" value="search" class="btn btn-success" /></p>
            </div>
        </div>
    </div>
}
